!Resize wider preserves cells
RESET
RESIZE 25,80
PUSH "AB\r\nCD"
  ?screen_chars 0,0,1,80 = 0x41,0x42
  ?screen_chars 1,0,2,80 = 0x43,0x44
RESIZE 25,100
  ?screen_chars 0,0,1,100 = 0x41,0x42
  ?screen_chars 1,0,2,100 = 0x43,0x44

